# Scalping Engine - Environment Variables Template
# Copy this file to .env.scalper and fill in your API keys

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here

# IG Trading API (Forex Market Data & Trading)
IG_API_KEY=your_ig_api_key_here
IG_USERNAME=your_ig_username_here
IG_PASSWORD=your_ig_password_here
IG_DEMO=true  # Use 'true' for demo account, 'false' for live
IG_ACC_NUMBER=your_ig_account_number_here

# Optional API Keys
TAVILY_API_KEY=your_tavily_api_key_here

# LangSmith Tracing & Observability
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=forex-scalping-engine

# Deprecated (keeping for backwards compatibility)
LANGSMITH_API_KEY=your_langchain_api_key_here
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=forex-scalping-engine

# Claude API for Validator Agent
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Forex Sentiment APIs (Optional)
ALPHA_VANTAGE_API_KEY=
FOREXNEWS_API_KEY=
FXSSI_API_KEY=

# Finnhub Technical Analysis & Pattern Recognition (Optional)
FINNHUB_API_KEY=
